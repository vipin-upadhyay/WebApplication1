@page
@model WebApplication1.Pages.Edit.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<form method="post">
    <input hidden asp-for="registration.Id" />
    <div class=" text-danger" asp-validation-summary="All"></div>
    <div class="border p-3 mt-4">
        <div class="row pb-4">
            First Name:
            <input asp-for="registration.FirstName" class="form-control" />

            <span class="text-danger" asp-validation-for="registration.FirstName"></span>
        </div>
        <div class="row pb-4">
            Last Name:
            <input asp-for="registration.LastName" class="form-control" />
            <span class="text-danger" asp-validation-for="registration.LastName"></span>
        </div>
        <div class="row pb-4">
            Email:
            <input asp-for="registration.Email" class="form-control" />
            <span class="text-danger" asp-validation-for="registration.Email"></span>
        </div>
        <div class="row pb-4">
            Password:
            <input asp-for="registration.Password" class="form-control" />
            <span class="text-danger" asp-validation-for="registration.Password"></span>
        </div>
        <button type="submit" class=" btn btn-primary" asp-page="AddNewUser">Update</button>
        <a asp-page="/UserDetails/Details" class="btn btn-secondary">Back to list</a>
    </div>

</form>
