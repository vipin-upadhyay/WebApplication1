@page
@model WebApplication1.Pages.UserDetails.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h1>User Details</h1>
        </div>
        <div class=" col-6">
        </div>
    </div>
    <br />
    <table id="myTable" class="table table-bordered table-striped table-responsive" style="width:100%; border-top:1px solid rgba(0, 0, 0, 0.3)";>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th><div> Edited Status</div></th>
                <th>Action</th>
            </tr>
        </thead>
        @foreach (var item in Model.registration)
        {
            <tbody>
                <tr>
                    <td width="20%">@item.FirstName  @item.LastName</td>
                    <td width="20%">@item.Email</td>
                    <td width="10%">@item.Password</td>
                    <td width="10%">@(item.IsDataEdited ? "true": "False")</td>
                    <td>
                        <div style="width:40%">
                            <a asp-page="/Edit/Edit" asp-route-id="@item.Id" class="mx-2">
                            <span><i class="bi bi-pencil-square"></i></span>
                            </a>
                            <a asp-page="/Delete/Delete" asp-route-id="@item.Id" class="text-danger mx-2">
                                <span><i class="bi bi-trash"></i></span>
                            </a>
                        </div>

                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
   <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
  <script type="text/javascript">
    $(document).ready( function () {
      $('#myTable').DataTable({
                searching: false, 
                paging: false, 
                info: false
      });
});
    </script>
}